  <% if (!user) { %>
    <link rel="stylesheet" href="/stylesheets/siwg.css">
  <% } %>
</head>
<body>
  <nav>
    <a 
      href="/character/new" <%- title === 'Add Character' ? 'class="active"' : '' %>
    >
      + Character
    </a>
    
    <% if (user) { %>
      <a href="/auth/logout">
        <button type="submit">Logout</button>
      </a>
    <% } else { %>
      <a href="/auth/google" class="siwg-link">
        <button type="submit" class="siwg">
          <img id="siwg-image" alt="Sign in with Google" />
        </button>
      </a>
    <% } %>

    <a 
    href="/book/new" <%- title === 'Add Book' ? 'class="active"' : '' %>
  >
    + Book
  </a>
    
  </nav>
